#!/bin/bash

i3confpath="$HOME/.config/i3/config"
i3confdir="$HOME/.config/i3"

rm $i3confpath
touch $i3confpath
echo "#======================================================" >> $i3confpath
echo "#======!!!    GENERATED FILE, DO NOT EDIT   !!!========" >> $i3confpath
echo "#======================================================" >> $i3confpath
echo "" >> $i3confpath
cat $i3confdir/*.i3config >> $i3confpath